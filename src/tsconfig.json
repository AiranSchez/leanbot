{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [ "es2015" ],
    "allowJs": true,
    "outDir": "../dist",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "jest.config.js"
  ]
}